@page
@model GolfClubApp.Pages.Members.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Become a Member </h1>

<p>
   @* <a asp-page="Create">Create Your Membership Profile</a>*@

<p class="fst-italic"> Please use the scrolling symbol (&#x25b4;&#x25be;) on the right handside to sort each column (by ascending and decending order)</p>
<p class="fst-italic"> You can also use the search box on the far right handside to filter the data <i class="fas fa-search"></i> - then sort (&#x25b4;&#x25be;) with added filters</p>

<p>
    <a class="btn btn-success" asp-page="Create" role="button">Create Your Membership Profile</a>
</p>

<table id="Exampledatatable" class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Handicap)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Member[0].Booking)
            </th>*@
            <th> Membership Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Member) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Handicap)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Booking)
            </td>*@
            <td>
                @*<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>*@

                    <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@item.Id" role="button">Edit</a> |
                    <a class="btn btn-outline-primary btn-sm" asp-page="./Details" asp-route-id="@item.Id" role="button">Details</a> |
                    <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id" role="button">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section scripts {

    <link href="https://cdn.datatables.net/v/dt/dt-1.13.3/af-2.5.2/b-2.3.5/cr-1.6.1/date-1.3.1/datatables.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/v/dt/dt-1.13.3/af-2.5.2/b-2.3.5/cr-1.6.1/date-1.3.1/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#Exampledatatable').DataTable();
        });
    </script>
}
