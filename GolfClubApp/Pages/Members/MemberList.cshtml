@page
@model GolfClubApp.Pages.Members.MemberListModel
@{
}

<h1> Members Handicap Ranking Table</h1>

<p class="fst-italic"> Please use the scrolling symbol (&#x25b4;&#x25be;) on the right handside to sort each column</p>
<p class="fst-italic"> You can also use the search box on the far right handside to filter the data <i class="fas fa-search"></i> - for example, search: female and sort by handicap</p>

<table id="Exampledatatable" class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Handicap</th>
            <th scope="col">Name</th>     
            <th scope="col">Gender</th>
            <th scope="col">Ranking by Handicap</th>
        </tr>
    </thead>
    <tbody>
        @*<tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>mdo</td>
        </tr>*@

        @{
            int counter = 1;
            var sortedMembers = Model.Member.OrderBy(m => m.Handicap);
        }
        
        @*Model.Member*@

        @foreach (var item in sortedMembers) 
        {
            <tr>
                <td>@item.Handicap</td>
                <td>@item.Name</td>               
                <td>@item.Sex</td>
                @*<td>1</td>*@
                <td>@counter</td>
            </tr>
            counter++;
        }

    </tbody>
</table>

@section scripts {

    <link href="https://cdn.datatables.net/v/dt/dt-1.13.3/af-2.5.2/b-2.3.5/cr-1.6.1/date-1.3.1/datatables.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/v/dt/dt-1.13.3/af-2.5.2/b-2.3.5/cr-1.6.1/date-1.3.1/datatables.min.js"></script>

    <script> 
        $(document).ready(function () {
        $('#Exampledatatable').DataTable();
        });
    </script>
}