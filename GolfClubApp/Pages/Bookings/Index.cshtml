@page
@model GolfClubApp.Pages.Bookings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>
    Bookings
    <small class="text-muted">Pick the perfect time to tee off!</small>
</h1>

<p> Please use the scrolling symbol (&#x25b4;&#x25be;) on the right handside to sort each column (by ascending and decending order)</p>

<p>
    @*<a asp-page="Create">Create New Booking</a>*@
    <a class="btn btn-success" asp-page="Create" role="button">Create a New Tee Time Booking</a>
</p>


<table id="Exampledatatable" class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].Member)
            </th>
             
            @*<th>
                @Html.DisplayNameFor(model => model.Booking[0].NumMembers)
            </th>*@
            <th>
                Booking Options
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Booking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Name)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.NumMembers)
            </td>*@
            <td>
                    <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@item.Id" role="button">Edit</a> |
                    <a class="btn btn-outline-primary btn-sm" asp-page="./Details" asp-route-id="@item.Id" role="button">Details</a> |
                    <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id" role="button">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section scripts {

    <link href="https://cdn.datatables.net/v/dt/dt-1.13.3/af-2.5.2/b-2.3.5/cr-1.6.1/date-1.3.1/datatables.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/v/dt/dt-1.13.3/af-2.5.2/b-2.3.5/cr-1.6.1/date-1.3.1/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#Exampledatatable').DataTable();
        });
    </script>
}
